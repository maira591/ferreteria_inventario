@using NonFactors.Mvc.Grid
@using System.Data
@model DataTable

@(Html.Grid(Model.Rows.Cast<DataRow>())
    .Build(columns =>
    {
        foreach (var column in Model.Columns)
        {
            columns.Add(model => model[column.ToString()]).Filterable(true).Sortable(true).Titled(column.ToString());
        }
    })
    .Empty("No se encontraron datos.")
    .Filterable().Sortable().Id("my-ajax-grid")
    .Pageable(pager =>
    {
        pager.PageSizes = new Dictionary<Int32, String> { { 0, "Todos" }, { 5, "5" }, { 10, "10" }, { 50, "50" }, { 100, "100" } };
        pager.ShowPageSizes = true;
        pager.RowsPerPage = 5;
    }).Css("table table-bordered table-hover")
)