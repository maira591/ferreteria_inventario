@model Core.Application.Website.Models.Monitoreo.MonFechaCorteModel
<!-- Modal -->

<div class="modal-header">
    <h5 class="modal-title" id="modal-user-create-title">@ViewBag.TitleModal</h5>
</div>
<div class="modal-body" id="modal-user-create-body" style="overflow-y: auto;">
    <form asp-action="CreateOrUpdate" asp-controller="Format" data-ajax="true" data-ajax-method="POST" id="formentity">

        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)


        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.LabelFor(model => model.Corte, htmlAttributes: new { @class = "col-form-label col-md-12 col-sm-12 col-xs-12" })
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        @Html.TextBoxFor(model => model.Corte, htmlAttributes: new { @class = "form-control required", autocomplete = "off", @maxlength = 60, @readonly = true})
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.LabelFor(model => model.FechaHoraPlanvisita, htmlAttributes: new { @class = "col-form-label col-md-12 col-xs-12" })
                    <div class="col-md-12 col-xs-12 input-group dp-date">
                        <input type="hidden" value="@Model.FechaHoraPlanvisita.ToString("dd/MM/yyyy HH:mm:ss")" id="hdf_FechaHoraPlanvisita" />
                        @Html.TextBoxFor(model => model.FechaHoraPlanvisita, new { @class = "form-control col-md-12 col-xs-12 timepicker readonlyInput" , @readonly = "readonly"})
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.LabelFor(model => model.FechaInicio, htmlAttributes: new { @class = "col-form-label col-md-12 col-xs-12" })
                    <div class="col-md-12 col-xs-12 input-group dp-date">
                        @{
                            string fechaInicio = (Model.FechaInicio.Year != 1 ? Model.FechaInicio.ToString("dd/MM/yyyy") : "");
                        }
                        <input type="hidden" value="@fechaInicio" id="hdf_FechaInicio" />
                        @Html.TextBoxFor(model => model.FechaInicio, new { @class = "form-control col-md-12 col-xs-12" , @readonly = "readonly"})
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.LabelFor(model => model.FechaFin, htmlAttributes: new { @class = "col-form-label col-md-12 col-xs-12" })
                    <div class="col-md-12 col-xs-12 input-group dp-date">
                        @{
                            string fechaFin = (Model.FechaFin.Year != 1 ? Model.FechaFin.ToString("dd/MM/yyyy") : "");
                        }
                        <input type="hidden" value="@fechaFin" id="hdf_FechaFin" />
                        @Html.TextBoxFor(model => model.FechaFin, new { @class = "form-control col-md-12 col-xs-12" , @readonly = "readonly"})
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.LabelFor(model => model.FechaHoraIniMonitoreo, htmlAttributes: new { @class = "col-form-label col-md-12 col-xs-12" })
                    <div class="col-md-12 col-xs-12 input-group dp-date">
                        <input type="hidden" value="@Model.FechaHoraIniMonitoreo.ToString("dd/MM/yyyy HH:mm:ss")" id="hdf_FechaHoraIniMonitoreo" />
                        @Html.TextBoxFor(model => model.FechaHoraIniMonitoreo, new { @class = "form-control col-md-12 col-xs-12 timepicker readonlyInput" , @readonly = "readonly"})
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.LabelFor(model => model.FechaHoraAgregados, htmlAttributes: new { @class = "col-form-label col-md-12 col-xs-12" })
                    <div class="col-md-12 col-xs-12 input-group dp-date">
                        <input type="hidden" value="@Model.FechaHoraAgregados.ToString("dd/MM/yyyy HH:mm:ss")" id="hdf_FechaHoraAgregados" />
                        @Html.TextBoxFor(model => model.FechaHoraAgregados, new { @class = "form-control col-md-12 col-xs-12 timepicker readonlyInput" , @readonly = "readonly"})
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.LabelFor(model => model.FechaHoraConInfoCore, htmlAttributes: new { @class = "col-form-label col-md-12 col-xs-12" })
                    <div class="col-md-12 col-xs-12 input-group dp-date">
                        <input type="hidden" value="@Model.FechaHoraConInfoCore.ToString("dd/MM/yyyy HH:mm:ss")" id="hdf_FechaHoraConInfoCore" />
                        @Html.TextBoxFor(model => model.FechaHoraConInfoCore, new { @class = "form-control col-md-12 col-xs-12 timepicker readonlyInput" , @readonly = "readonly"})
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.LabelFor(model => model.FechaHoraConInfoSiaf, htmlAttributes: new { @class = "col-form-label col-md-12 col-xs-12" })
                    <div class="col-md-12 col-xs-12 input-group dp-date">
                        <input type="hidden" value="@Model.FechaHoraConInfoSiaf.ToString("dd/MM/yyyy HH:mm:ss")" id="hdf_FechaHoraConInfoSiaf" />
                        @Html.TextBoxFor(model => model.FechaHoraConInfoSiaf, new { @class = "form-control col-md-12 col-xs-12 timepicker readonlyInput" , @readonly = "readonly"})
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="d-none">
                <input type="submit" value="Guardar" class="btn btn-primary" id="btn-create-format" data-tippy-content="Pulse para Guardar." />
            </div>
        </div>
    </form>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-outline-dark" onclick="hideModalPartial();" data-tippy-content="Pulse para Cancelar.">Cancelar</button>
    <button type="button" class="btn btn-primary" onclick="MonFechaCorte.Save();" data-tippy-content="Pulse para Guardar.">Guardar</button>
</div>
<script>
    MonFechaCorte.InitControls()
</script>