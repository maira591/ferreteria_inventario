@model IEnumerable<Core.Application.Website.Models.GraphicSubGroupModel>
@using NonFactors.Mvc.Grid
@{
    var urlEdit = @Url.Action("Edit", "GraphicSubGroup");
    var urlDelete = @Url.Action("Delete", "GraphicSubGroup");
}

@(Html.Grid(Model).Build(columns =>
{
    columns.Add(c => c.GraphicGroup.Name).Titled("Grupo");
    columns.Add(c => c.Name).Titled("Nombre");
    columns.Add(c => c.GroupIndicatorName).Titled("Nombre Grupo Indicador");
    columns.Add(c => c.Description).Titled("Descripción");    
    columns.Add().Titled("Acciones").RenderedAs(s => $"<div class='form-inline'><i class='fa fa-edit btn-lg text-primary-icon gel-tab-key' tabindex='0' data-tippy-content='Editar' onclick=\"GraphicSubGroup.OpenEdit('{urlEdit}?id={s.Id}');\"></i> <i class='fa fa-trash btn-lg text-danger-icon gel-tab-key' tabindex='0' data-tippy-content='Eliminar' style='margin-left:8px' onclick=\"GraphicSubGroup.Delete('{urlDelete}?id={s.Id}','{s.GraphicGroupId}')\"></i></div>").Encoded(false);
})
)
