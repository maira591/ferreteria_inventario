@model Core.Domain.ViewModel.MessageVM


<div class="modal-header">
    <h5 class="modal-title" id="modal-user-create-title">@ViewBag.TitlePage</h5>
</div>
<div class="modal-body" id="modal-user-create-body" style="overflow-y: auto;">
    <form asp-action="CreateOrUpdate" asp-controller="MessageError" data-ajax="true" data-ajax-method="POST" id="formMessageCrud">

        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.CreatedBy)
        @Html.HiddenFor(model => model.CreatedOn)

        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "col-form-label col-md-12 col-sm-12 col-xs-12" })
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        @Html.TextBoxFor(model => model.Code, new { @class = "form-control col-md-12 col-xs-12 required", placeholder = "Digite el código del mensaje", @maxlength = 40 })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-form-label col-md-12 col-sm-12 col-xs-12" })
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control col-md-12 col-xs-12 required", placeholder = "Digite el nombre del mensaje", @maxlength = 400 })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-form-label col-md-12 col-sm-12 col-xs-12" })
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control col-md-12 col-xs-12 required", placeholder = "Digite la descripción del mensaje", @maxlength = 400, @rows = 3 })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    @Html.LabelFor(model => model.PossibleSolution, htmlAttributes: new { @class = "col-form-label col-md-12 col-sm-12 col-xs-12" })
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        @Html.TextAreaFor(model => model.PossibleSolution, new { @class = "form-control col-md-12 col-xs-12", placeholder = "Digite la posible solución del mensaje", @maxlength = 400, @rows= 3})
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.LabelFor(model => model.Exception, htmlAttributes: new { @class = "col-form-label col-md-12 col-sm-12 col-xs-12" })
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        @Html.CheckBoxFor(model => model.Exception, new { @class = "form-check" })
                    </div>
                </div>

                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.LabelFor(model => model.Bus, htmlAttributes: new { @class = "col-form-label col-md-12 col-sm-12 col-xs-12" })
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        @Html.CheckBoxFor(model => model.Bus, new { @class = "form-check" })
                    </div>
                </div>

            </div>
        </div>

        <div class="form-group">
            <div class="d-none">
                <input type="submit" value="Guardar" class="btn btn-primary" id="btn-create-periodicity" data-tippy-content="Pulse para Guardar." />
            </div>
        </div>
    </form>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-outline-dark" onclick="hideModalPartial();" data-tippy-content="Pulse para Cancelar.">Cancelar</button>
    <button type="button" class="btn btn-primary" onclick="MessageError.Save();" data-tippy-content="Pulse para Guardar.">Guardar</button>
</div>

@section Scripts{

    <script>
        $(function () {
            $('#nav-parametrization').click();
            $('#nav-messageerror').parent().addClass('active');

            $('#parametrizacionNav').addClass('active');
            $('#parametrizacion').addClass('show');
            $('#nav-messageserror').addClass('active');

        });
    </script>
}
