@using NonFactors.Mvc.Grid
@model Core.Application.Website.Models.GraphicModel
@{
    ViewBag.Title = "Gráficas";
}

<link href="~/css/core/mvc-grid/mvc-grid.css" rel="stylesheet" />
<link href="~/css/jquery.json-viewer.css" rel="stylesheet" />
<style>
    .selection {
        color: #6e707e !important;
    }

    .multiselect-container {
        max-height: 180px;
        overflow: hidden auto;
        transform: none;
        width: 100%;
        will-change: transform;

    }
</style>

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@string.Concat(ViewBag.CooperativeName, "Ejecutar gráficas")</h1>
    </div>
</div>

<div class="col-md-12 col-xl-12 col-sm-12">
    <div class="card">
        <div class="card-header card-header-primary">
            <form id="paramsForm">
                <input type="hidden" id="IndicatorsSiglas" name="IndicatorsSiglas"/>
                <div class="row">

                    @if (ViewBag.ShowCooperativeFilters)
                    {
                        <input type="hidden" id="validateCoop" value="S" />
                        <div class="col-md-3 col-sm-4 col-xs-12">
                            @Html.Label(null, "Tipo Cooperativa", htmlAttributes: new { @class = "col-form-label col-md-12 col-sm-12 col-xs-12" })
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                @Html.DropDownList("EntityType", (IEnumerable<SelectListItem>)ViewBag.EntityTypeList, "Seleccione", htmlAttributes: new { @class = "form-control select2 required", @style = "width:100%;" })
                            </div>
                        </div>

                        <div class="col-md-3 col-sm-4 col-xs-12">
                            @Html.Label(null, "Cooperativa", htmlAttributes: new { @class = "col-form-label col-md-12 col-sm-12 col-xs-12" })
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                @Html.DropDownList("EntityCode", (IEnumerable<SelectListItem>)ViewBag.EntityCodeList, "Seleccione", htmlAttributes: new { @class = "form-control select2 required", @style = "width:100%;" })
                            </div>
                        </div>
                    }
                    else
                    {
                        <input type="hidden" id="validateCoop" value="N" />
                        <input type="hidden" id="EntityCode" name="EntityCode" value="@ViewBag.EntityCode" />
                        <input type="hidden" id="EntityType" name="EntityType"  value="@ViewBag.EntityType" />
                    }
                    <div class="col-md-3">
                        <div class="col-sm-12">
                            @Html.Label("PeriodicityId", "Periodicidad", new { @class = "col-form-label"})
                        </div>
                        <div class="col-sm-12">
                            @Html.DropDownList("PeriodicityId",  (IEnumerable<SelectListItem>)ViewBag.ListGraphicPeriodicty, "Seleccione", htmlAttributes: new { @class = "form-control select2 required", @style = "width:100%;" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="col-sm-12">
                            @Html.Label("GraphicGroupId", "Grupo", new { @class = "col-form-label"})
                        </div>
                        <div class="col-sm-12">
                            @Html.DropDownListFor(model => model.GraphicGroupId, (IEnumerable<SelectListItem>)ViewBag.ListGraphicGroup, "Seleccione", htmlAttributes: new { @class = "form-control select2 required", @style = "width:100%;" })
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="col-sm-12">
                            @Html.Label("GraphicSubGroupId", "Sub Grupo", new { @class = "col-form-label"})
                        </div>
                        <div class="col-sm-12">
                            @Html.DropDownList("GraphicSubGroupId",  new List<SelectListItem>(), "Seleccione...", htmlAttributes: new { @class = "form-control select2", @style = "width:100%;" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="col-sm-12">
                            @Html.Label("StartDate", "Fecha Inicio", new { @class = "col-form-label"})
                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="input-group dp-date">
                                @Html.TextBox("StartDate", DateTime.Now.ToString("dd/MM/yyyy"), new { @class = "form-control required"})
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="col-sm-12">
                            @Html.Label("EndDate", "Fecha Fin", new { @class = "col-form-label"})
                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="input-group dp-date">
                                @Html.TextBox("EndDate", DateTime.Now.ToString("dd/MM/yyyy"), new { @class = "form-control required"})
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="col-sm-12">
                            <label class="col-form-label" style=" padding: 15px;"></label>
                        </div>
                        <div class="col-sm-12">
                            <button style="border: 1px solid" id="btnConsultar" onclick="RunGraphic.ExcecuteGraphics('@Url.Action("ExcecuteGraphics")');" type="button" class="btn btn-white btn-round btn-just-icon text-white" data-tippy-content="Pulse para consultar las gráficas.">
                                <span>Consultar</span>
                                <i class="fa fa-search" aria-hidden="true"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-md-1 col-sm-1 col-xs-12" style="padding-top: 35px;">
                </div>
            </form>
        </div>
        <div class="card-body">
            <div class="row">

                <h5 class="text-center">Gráficas</h5>
                <br />

                <div id="container-indicators" class="col-md-12">
                </div>
                <div id="container-graphics" class="col-md-12">
                </div>
            </div>
        </div>

    </div>
</div>

<script src="~/vendor/charjs_4_2/charjs-4_2_1.js"></script>
<script src="~/vendor/charjs_4_2/chartjs-plugin-datalabels-v2_0_0.js"></script>
<script src="~/vendor/charjs_4_2/chartjs-chart-boxplot-3_6_0.js"></script>
<script src="~/vendor/charjs_4_2/chartjs-plugin-datalabels-v2_0_0.js"></script>
<script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="~/vendor/datatables/tableToExcel.js"></script>
<script src="~/js/core/RunGraphic/RunGraphic.js" asp-append-version="true"></script>


@section Scripts{

    <script>
        $(function () {
            $('#nav-run-graphic').addClass('active');
            RunGraphic.Init();
           
        });
    </script>
}