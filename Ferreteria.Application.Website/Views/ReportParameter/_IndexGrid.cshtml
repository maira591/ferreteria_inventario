@model IEnumerable<Core.Application.Website.Models.ReportParameterDefinitionModel>
@using NonFactors.Mvc.Grid
@{
    var urlEdit = @Url.Action("Edit", "ReportParameter");
    var urlDelete = @Url.Action("Delete", "ReportParameter");
}

@(Html.Grid(Model).Build(columns =>
{
    columns.Add(c => c.Name).Titled("Nombre").UsingDefaultFilterMethod("contains");
    columns.Add(c => c.ReplaceKey).Titled("Llave").UsingDefaultFilterMethod("contains");
    columns.Add(c => c.DataType).Titled("Tipo Dato").UsingDefaultFilterMethod("contains");
    columns.Add(c => c.ListType).Titled("Tipo Lista").RenderedAs(x => x.ListType == Domain.Utils.ListType.TypeSimple ? Domain.Utils.ListType.Simple : x.ListType == Domain.Utils.ListType.TypeMultiple ? Domain.Utils.ListType.Multiple : "");
    columns.Add(c => c.IsRequired).Titled("Obligatorio").RenderedAs(x => x.IsRequired ? "SI" : "NO");
    columns.Add().Titled("Acciones").RenderedAs(s => $"<div class='form-inline'><i class='fa fa-edit btn-lg text-primary-icon gel-tab-key' tabindex='0' data-tippy-content='Editar' onclick=\"ReportParameter.OpenEdit('{urlEdit}?id={s.Id}');\"></i></div>").Encoded(false);
}).Empty("No se encontraron datos").Filterable().Sortable().Id("my-ajax-grid")
                                        .Pageable(pager =>
                                        {
                                            pager.PageSizes = new Dictionary<Int32, String> { { 0, "Todos" }, { 5, "5" }, { 10, "10" }, { 50, "50" }, { 100, "100" } };
                                            pager.ShowPageSizes = true;
                                            pager.RowsPerPage = 5;
                                        }).Css("table table-bordered table-hover")

)
