@using NonFactors.Mvc.Grid
@model Core.Domain.ViewModel.UplodFileVM
@{
    ViewBag.Title = "Carga de archivos";
}

<link href="~/css/core/mvc-grid/mvc-grid.css" rel="stylesheet" />
<link href="~/css/jquery.json-viewer.css" rel="stylesheet" />
<style>
    .selection {
        color: #6e707e !important;
    }

    .multiselect-container {
        max-height: 180px;
        overflow: hidden auto;
        transform: none;
        width: 100%;
        will-change: transform;
    }
</style>

@section Styles{
    <link rel="stylesheet" href="@Url.Content("~/css/core/Carga.css")" asp-append-version="true" />
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@string.Concat(ViewBag.CooperativeName, "Carga de Archivos")</h1>
    </div>
</div>

<div class="col-md-12 col-xl-12 col-sm-12">
    <div class="card">
        <form class="form-group" enctype="multipart/form-data" id="frm-file-upload"
              asp-controller="FileUpload" asp-action="ValidateFile"
              data-ajax="true"
              data-ajax-method="POST"
              data-ajax-begin="OnBegin"
              data-ajax-success="fileResult">
            <div class="card-header card-header-primary">
                <div class="row">

                    @if (ViewBag.ShowCooperativeFilters)
                    {
                        <input type="hidden" id="validateCoop" value="S" />
                        <div class="col-md-3 col-sm-4 col-xs-12">
                            @Html.Label(null, "Tipo Cooperativa", htmlAttributes: new { @class = "col-form-label col-md-12 col-sm-12 col-xs-12" })
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                @Html.DropDownList("EntityType", (IEnumerable<SelectListItem>)ViewBag.EntityTypeList, "Seleccione", htmlAttributes: new { @class = "form-control select2 required", @style = "width:100%;", onchange="FileUpload.VerifyValuesFilters()"})
                            </div>
                        </div>

                        <div class="col-md-3 col-sm-4 col-xs-12">
                            @Html.Label(null, "Cooperativa", htmlAttributes: new { @class = "col-form-label col-md-12 col-sm-12 col-xs-12" })
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                @Html.DropDownList("EntityCode", (IEnumerable<SelectListItem>)ViewBag.EntityCodeList, "Seleccione", htmlAttributes: new { @class = "form-control select2 required", @style = "width:100%;", onchange="FileUpload.VerifyValuesFilters()" })
                            </div>
                        </div>
                    }
                    else
                    {

                        <div class="col-12">
                            <div class="form-inline">
                                <h4 class="card-title ">
                                    Carga de archivos
                                </h4>
                                
                            </div>
                        </div>
                        <input type="hidden" id="validateCoop" value="N" />
                        <input type="hidden" id="EntityCode" name="EntityCode" value="@ViewBag.EntityCode" />
                        <input type="hidden" id="EntityType" name="EntityType" value="@ViewBag.EntityType" />
                    }
                </div>

                <div class="col-md-1 col-sm-1 col-xs-12" style="padding-top: 35px;">
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div class="wizard-content" style="">
                            <div id="step-1" style="display: block;">
                                <h6>Carga de archivos</h6>
                            </div>
                        </div>

                        <input type="file" asp-for="AttachedFile" class="d-none" />
                        <input type="hidden" id="validateCoop" value="N" />
                        <input type="hidden" id="BaseUrl" name="BaseUrl" value="@ViewBag.UrlBase" />
                        <input type="hidden" id="FileSizeDefault" name="FileSizeDefault" value="@ViewBag.FileSizeDefault" />

                        <div class="text-center noclick" id="upload-box" data-tippy-content="Seleccionar ">
                            <i class="fas fa-upload" id="icon-file" style="font-size:4rem;opacity:0.6"></i>
                            <br />
                            <label id="lblAttachedFile" class="text-info h5 gel-tab-key">Seleccione archivo.</label>
                        </div>
                        <div class="form-group text-center">
                            <input id="btn-validate-file" type="submit" value="Cargar" class="btn btn-success btn-large d-none" style="margin-top: .5rem;width: 200px;" />
                        </div>
                        <br />
                        <br />
                    </div>

                </div>
            </div>

        </form>
    </div>
</div>

<script src="~/js/core/FileUpload/FileUpload.js" asp-append-version="true"></script>


@section Scripts{

    <script>
        $(function () {
            $('#nav-file-upload').addClass('active');
            FileUpload.Init();
        });
    </script>
}