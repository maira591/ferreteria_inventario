@using NonFactors.Mvc.Grid

@{
    ViewBag.Title = "Validaciones";
    ViewBag.SubTitle = "Administración para las validaciones de los formatos.";
}

<style type="text/css">
    .select2-results__option[aria-selected=true] {
        display: none;
    }
</style>
<link href="~/css/core/mvc-grid/mvc-grid.css" rel="stylesheet" />
<link href="~/css/core/Formulator/Index.css" rel="stylesheet" asp-append-version="true"/>

<script type="text/javascript">
    showLoading();
</script>

<div class="col-md-12 col-xl-12 col-sm-12">
    <div class="card">
        <div class="card-header card-header-primary">
            <div class="col-12">
                <div class="form-inline">
                    <h4 class="card-title ">
                        Validaciones
                    </h4>
                    <a href="@Url.Action("Create")">
                        <i class="fa fa-plus-circle addrecord" data-tippy-content="Nueva validación."></i>
                    </a>
                    <a href="#" onclick="Validations.ExportValidations('@Url.Action("ExportValidations")');">
                        <i class="fa fa-download addrecord" data-tippy-content="Exportar Validaciones." tabindex="0"></i>
                    </a>
                </div>
                <p class="card-category">
                    Administración para las validaciones de los formatos.
                </p>
            </div>
        </div>
        <!-- Content Row -->
        <div class="card-body">
            <div class="row">
                <div class="table-responsive" id="grid">
                    @Html.AjaxGrid(Url.Action("IndexGrid"))
                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/js/core/MvcGrid/mvc-grid.js"></script>
<script src="~/js/core/Petitions/Petitions.js"></script>
<script src="~/js/core/Formulator/Validation.js" asp-append-version="true"></script>

@section Scripts{

    <script>

        $(function () {
            $('#parametrizacionNav').addClass('active');
            $('#parametrizacion').addClass('show');
            $('#nav-validation').addClass('active');
            CreateAllTooltips();
        });

        document.addEventListener('reloadend', function (e) {
            CreateAllTooltips();
            addKeyboardEvents();
            hideLoading();
        });

        [].forEach.call(document.getElementsByClassName('mvc-grid'),
            function (element) {
                new MvcGrid(element);
            });

    </script>
}
